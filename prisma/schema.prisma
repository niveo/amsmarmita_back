datasource db {
      provider = "mongodb"
      url      = env("DATABASE_URL")
}

generator client {
      provider = "prisma-client-js"
}

model Grupo {
      id         String  @id @default(auto()) @map("_id") @db.ObjectId
      nome       String
      principal  Boolean @default(false)
      observacao String?
      Prato      Prato[]

      @@map("grupos")
}

model Comedor {
      id   String @id @default(auto()) @map("_id") @db.ObjectId
      nome String

      @@map("comedores")
}

model Marmita {
      id         String   @id @default(auto()) @map("_id") @db.ObjectId
      lancamento DateTime
      observacao String?

      pedidos Pedido[]

      @@index([lancamento])
      @@map("marmitas")
}

model Pedido {
      id        String  @id @default(auto()) @map("_id") @db.ObjectId
      marmita   Marmita @relation(fields: [marmitaId], references: [id])
      marmitaId String  @db.ObjectId

      //      comedor Comedor     @relation(fields: [comedorId], references: [id]) 
      //      comedorId String @db.ObjectId

      @@map("pedidos")
}

model Prato {
      id          String   @id @default(auto()) @map("_id") @db.ObjectId
      composicoes String[]
      observacao  String?
      grupo       Grupo?   @relation(references: [id], fields: [grupoId])
      grupoId     String?  @db.ObjectId

      @@map("pratos")
}
